<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">
                <ImageView
                    android:id="@+id/kitchen_back_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/left_back"
                    android:layout_marginLeft="17dp"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="厨房问答"
                    android:layout_centerInParent="true"
                    android:textSize="18sp"
                    android:textColor="#212121"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="12dp">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:background="@drawable/edittext_bg_kitchen"
                    android:hint="搜索问答"
                    android:textSize="11sp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:textColorHint="#212121"/>
                <ImageView
                    android:id="@+id/search_imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/left_search"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"/>

            </RelativeLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginTop="12dp"
                android:src="@mipmap/icon_bg_kitchen" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提问题"
                android:textSize="15sp"
                android:textColor="#212121"
                android:drawableLeft="@mipmap/icon_kitchen_image"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:drawablePadding="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="热门"
                    android:textSize="15dp"
                    android:textColor="#212121"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="推荐"
                    android:textSize="15dp"
                    android:textColor="#212121"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="最新"
                    android:textSize="15dp"
                    android:textColor="#212121"
                    android:gravity="center"/>

            </LinearLayout>
            <!--View-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#F0F0F0">
                    <View
                        android:id="@+id/gone_one_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="#fbbf41"
                        android:visibility="invisible"/>
                    <View
                        android:id="@+id/gone_two_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="#fbbf41" />
                    <View
                        android:id="@+id/gone_three_view"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:background="#fbbf41"
                        android:visibility="invisible"/>

                </LinearLayout>

            </RelativeLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="如何炸出M记里的薯条？"
                android:layout_marginLeft="12dp"
                android:textSize="18sp"
                android:textColor="#212121"
                android:layout_marginTop="13dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:id="@+id/me_head_image"
                    android:layout_width="32dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/icon_touxiang_qq"
                    android:scaleType="centerCrop"
                    android:background="@drawable/touxiang_bg" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阿瓜"
                    android:textSize="16sp"
                    android:textColor="#212121"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/me_head_image"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="关注"
                    android:textSize="13sp"
                    android:textColor="#505050"
                    android:drawableLeft="@mipmap/add"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/follow_bg"
                    android:padding="2dp"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="13dp"
                android:text="文字描述文字描述文字描述文字描述文字描述文字描述文字描述文字描述"
                android:textColor="#212121"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="171dp"
                android:layout_marginTop="13dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:src="@mipmap/icon_kitchen_bg"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:id="@+id/soucang_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="680"
                    android:textColor="#787878"
                    android:layout_marginLeft="12dp"
                    android:drawableLeft="@mipmap/image_soucang"
                    android:drawablePadding="4dp"
                    android:layout_alignParentBottom="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="250"
                    android:textColor="#787878"
                    android:layout_toRightOf="@id/soucang_textview"
                    android:drawableLeft="@mipmap/image_pingjia"
                    android:layout_alignParentBottom="true"
                    android:drawablePadding="4dp"
                    android:layout_marginLeft="19dp"/>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
