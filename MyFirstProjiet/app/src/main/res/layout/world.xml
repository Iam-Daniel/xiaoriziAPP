<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--标题栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_alignBottom="@+id/around_relativeLayout01"
                    android:background="#f0f0f0"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <RelativeLayout
                    android:id="@+id/around_relativeLayout01"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/around_title_left"
                        android:text="关注"
                        android:textSize="18sp"
                        android:textColor="@color/set_orange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/around_title_right"
                        android:layout_toRightOf="@id/around_title_left"
                        android:layout_marginLeft="19dp"
                        android:text="附近"
                        android:textSize="18sp"
                        android:textColor="@color/set_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:id="@+id/show_left"
                        android:layout_marginTop="11dp"
                        android:layout_alignLeft="@id/around_title_left"
                        android:layout_alignRight="@id/around_title_left"
                        android:background="@color/set_orange"
                        android:layout_below="@id/around_title_right"
                        android:layout_width="36dp"
                        android:layout_height="3dp"/>
                    <View
                        android:visibility="invisible"
                        android:id="@+id/show_right"
                        android:layout_marginTop="11dp"
                        android:layout_alignLeft="@id/around_title_right"
                        android:layout_alignRight="@id/around_title_right"
                        android:background="@color/set_orange"
                        android:layout_below="@id/around_title_right"
                        android:layout_width="36dp"
                        android:layout_height="3dp"/>
                </RelativeLayout>
            </RelativeLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

            </android.support.v4.view.ViewPager>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
