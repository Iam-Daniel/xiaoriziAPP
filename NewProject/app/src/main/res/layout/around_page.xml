<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <!--标题栏-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:layout_alignBottom="@+id/around_relativeLayout01"
                    android:background="#f0f0f0"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>
                <RelativeLayout
                    android:id="@+id/around_relativeLayout01"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/around_title_left"
                        android:text="关注"
                        android:textSize="18sp"
                        android:textColor="#212121"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/around_title_right"
                        android:layout_toRightOf="@id/around_title_left"
                        android:layout_marginLeft="19dp"
                        android:text="附近"
                        android:textSize="18sp"
                        android:textColor="#FBBF41"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginTop="11dp"
                        android:layout_alignLeft="@id/around_title_right"
                        android:layout_alignRight="@id/around_title_right"
                        android:background="#FBBF41"
                        android:layout_below="@id/around_title_right"
                        android:layout_width="36dp"
                        android:layout_height="3dp"/>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:layout_marginTop="14dp"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="周围都在做"/>

            <!--展示栏-->
            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_marginTop="11dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/around_show_left"
                        android:src="@mipmap/around_page_show01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:background="#80C8C8C8"
                        android:text="名称"
                        android:layout_alignBottom="@id/around_show_left"
                        android:layout_alignRight="@id/around_show_left"
                        android:layout_alignLeft="@id/around_show_left"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/around_show_middle"
                        android:src="@mipmap/around_page_show01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:background="#80C8C8C8"
                        android:text="名称"
                        android:layout_alignBottom="@id/around_show_middle"
                        android:layout_alignRight="@id/around_show_middle"
                        android:layout_alignLeft="@id/around_show_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:gravity="center_horizontal"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/around_show_right"
                        android:src="@mipmap/around_page_show01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:gravity="center"
                        android:background="#80C8C8C8"
                        android:text="名称"
                        android:layout_alignBottom="@id/around_show_right"
                        android:layout_alignRight="@id/around_show_right"
                        android:layout_alignLeft="@id/around_show_right"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp" />
                </RelativeLayout>
            </LinearLayout>
            <View
                android:background="#f0f0f0"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <!--个人信息栏-->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@mipmap/around_page_head"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:layout_marginLeft="13dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_weight="1"
                        android:textSize="14sp"
                        android:textColor="#505050"
                        android:text="阿瓜"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:text="美食达人"
                        android:textSize="12sp"
                        android:textColor="#313232"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:background="#f0f0f0"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>
            <!--详细信息-->
            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:textSize="12sp"
                    android:textColor="#313232"
                    android:text="文字描述文字描述文字描述"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/around_page_show02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
